<header>
  <p class="menu-icon">&#9776;</p>
  <h1>CATEGORIES</h1>
  <i class="fa-solid fa-magnifying-glass"></i>
</header>

<div class="category-list">
  <% @categories.each do |category| %>
    <%= link_to user_category_expenses_path(@user, category), class: 'category-link' do %>
    <div class="category">
      <div class="category-icon">
        <img scr='<%= category.icon %>' alt='<%= category.name %>'>
      </div>
      <div>
        <p class='name'><%= category.name %></p>
        <p class='expense-date'><%= category.created_at.strftime("%d %b %Y") %></p>
      </div>
      <div class="amount">
        <p>PLACEHOLDER FOR AMOUNT!!</p>
      </div>
    </div>  
    <% end %>
  <% end %>
  <%= link_to new_user_category_path(@user), class: 'add-category' do %>
    <span>Add Category</span>
  <% end %>
</div>
