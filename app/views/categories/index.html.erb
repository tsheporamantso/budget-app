<header>
  <p class="menu-icon">&#9776;</p>
  <h1>CATEGORIES</h1>
  <% unless current_page?(new_user_registration_path) || current_page?(new_user_session_path) %>
  <% if user_signed_in? %>
  <%= button_to 'Logout', destroy_user_session_path, method: :delete, class: "logout" %>
  <% else %>
    <%= link_to 'Sign up', new_user_registration_path %>
    <%= link_to 'Login', new_user_session_path %>
  <% end %>
<% end %>
</header>

<div class="category-list">
  <% @categories.each do |category| %>
    <%= link_to user_category_expenses_path(@user, category), class: 'category-link' do %>
    <div class="category">
      <div class="category-icon">
        <img src="<%= category.icon %>" alt="<%= category.name %>">
      </div>
      <div>
        <p class='name'><%= category.name %></p>
        <p class='expense-date'><%= category.created_at.strftime("%d %b %Y") %></p>
      </div>
    </div>  
    <% end %>
  <% end %>
</div>
<%= link_to new_user_category_path(@user), class: 'add-category' do %>
  <span>Add Category</span>
<% end %>